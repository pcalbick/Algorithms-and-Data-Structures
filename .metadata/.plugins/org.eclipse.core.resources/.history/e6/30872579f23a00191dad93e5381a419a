package Searches;

import java.util.Scanner;

public class BinarySearch {
	private int answer;
	
	public BinarySearch(int i, int[] array) {
		answer = find(i,array);
	}
	
	public int find(int i, int[] args) {
		int low = 0;
		int high = args.length-1;
		while(args[middle] != i) {
			int middle = ((high-low)/2)+low;
			if(args[middle] > i) high = middle;
			else if(args[middle] < i) low = middle;
			else return -1;
		}
		return low;
	}
	
	public static void main(String[] args) {
		int[] array = new int[] {10,20,30,40,50,60,70,80,90} ;
		Scanner scanner = new Scanner(System.in);
		System.out.println("Find : ");
		int i = scanner.nextInt();
		scanner.close();
		BinarySearch search = new BinarySearch(i,array);
		System.out.println(search.answer);
	}
}
