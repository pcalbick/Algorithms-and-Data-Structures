package Queues;

public class QueueArray {
	
	private String[] array;
	private int n = 0;
	
	public QueueArray() {
		array = new String[1];
	}
	
	public void push(String s) {
		array[n++] = s;
		if(n > array.length / 2) array = resize(array);
	}
	
	public String pop() {
		String s = array[0];
		if(--n < array.length / 4) array = shrink(array);
		for(int i=1; i<array.length-1; i++)
			array[i] = array[i+1];
		return s;
	}
	
	public String[] shrink(String[] array) {
		String[] newArray = new String[array.length / 2];
		for(int i=0; i<array.length; i++) {
			if(array[i] != null)
				newArray[i] = array[i];
		}
		return newArray;
	}
	
	public String[] resize(String[] array) {
		String[] newArray = new String[array.length * 2];
		for(int i=0; i<array.length; i++)
			newArray[i] = array[i];
		return newArray;
	}
}
