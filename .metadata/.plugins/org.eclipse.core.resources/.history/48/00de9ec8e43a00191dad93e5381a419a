package Stack;

public class StackArray {
	private String[] array;
	private int n = 0;
	
	public StackArray() {
		array = new String[1];
	}
	
	public void push(String s) {
		array[n++] = s;
		if(n == array.length) array = resize(array);
	}
	
	public String pop() {
		if(n - 1 < 0)
			throw new ArrayIndexOutOfBoundsException();
		String s = array[--n];
		array[n] = null;
		if(n < array.length/4) array = shrink(array);
		return s;
	}
	
	public String[] resize(String[] array) {
		String[] newArray = new String[array.length * 2];
		for(int i=0; i<array.length; i++)
			newArray[i] = array[i];
		return newArray;
	}
	
	public String[] shrink(String[] array) {
		String[] newArray = new String[array.length / 2];
		for(int i=0; i<array.length; i++)
			newArray[i] = array[i];
		return newArray;
	}
}
