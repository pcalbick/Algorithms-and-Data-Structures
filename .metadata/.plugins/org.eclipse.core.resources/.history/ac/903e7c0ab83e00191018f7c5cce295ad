package Sorts;

public class ShellSort {
	
	public void sort(Comparable<File>[] a) {
		int n = a.length;
		int h = 1;
		while(h < n/3) h = 3*h+1;
		
		while(h >= 1) {
			for(int i=h; i<n; i++) {
				for(int j=i; j>=h && less(a[j],a[j-h]); j-=h)
					exchange(a,j,j-h);
			}
			h = h/3;
		}
		
		assert isSorted(a, 0, a.length-1);
	}
	
	private boolean isSorted(Comparable<File>[] a, int lo, int high) {
		while(lo < high)
			if(!less(a[lo],a[++lo]))
				return false;
		return true;
	}
	
	private boolean less(Comparable<File> a, Comparable<File> b) {
		return a.compareTo((File)b) <= 0 ? true : false;
	}
	
	private void exchange(Comparable<File>[] a, int i, int j) {
		Comparable<File> swap = a[i];
		a[i] = a[j];
		a[j] = swap;
	}
}
