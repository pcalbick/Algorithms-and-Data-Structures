public class PercolationStats {
	private int numbOfPercolations;
	
	public PercolationStats(int n, int trials) {
		if(n <= 0 || trials <= 0)
			throw new IllegalArgumentException();
		for(int i=0; i<trials; i++) {
			Percolation percolation = new Percolation(n);
			if(percolation.percolates())
				numbOfPercolations++;
		}
	}
	
	public double mean(int trials) {
		return numbOfPercolations/trials;
	}
	
	public double stddev() {
		return confidenceHi() - confidenceLo();
	}
	
	public double confidenceLo() {
		return 0.0;
	}
	
	public double confidenceHi() {
		return 0.0;
	}
	
	public static void main(String[] args) {
		PercolationStats pstats = new PercolationStats(Integer.parseInt(args[0]),Integer.parseInt(args[1]));
		System.out.println("mean = " + pstats.mean());
		System.out.println("stddev = " + pstats.stddev());
		System.out.println("95% confidence interval = [" + 
				pstats.confidenceLo() + "][" + pstats.confidenceHi() + "]");
	}
}
