package Bags;

public class BagLinkedList {
	
	private class Node {
		Item item;
		Node next;
	}
	
	private Node first;
	
	public void add(Item item) {
		Node old = first;
		first = new Node();
		first.item = item;
		first.next = old;
	}
	
	public Item get(int i) {
		Node n = first;
		for(int p=0; p<i; p++)
			n = first.next;
		return n.item;
	}
	
	public void remove(int i) {
		Node n = first;
		for(int p=0; p<i-1; p++)
			n = first.next;
		Node del = n.next;
		n.next = n.next.next;
		del = null;
	}
}
