package Sorts;

public class SelectionSort {
	private Comparable<File>[] sorted;
	
	public SelectionSort(Comparable<File>[] a) {
		for(int i=0; i<a.length; i++) {
			for(int j=i+1; j<a.length; j++) {
				int min = i;
				if(less(a[i], a[min]))
					min = j;
				exchange(a, i, min);
			}
		}
		sorted = a;
	}
	
	public Comparable<File>[] get() {
		return sorted;
	}
	
	public static boolean less(File a, File b) {
		return b.compareTo(a) == -1 ? true : false;
	}
	
	public static void exchange(Comparable[] a, int i, int j) {
		Comparable swap = a[i];
		a[i] = a[j];
		a[j] = swap;
	}
}
